<h1 align="center"> Welcome to <%= @user.username%>'s page </h1>
<div class="row">
    <div class= "cal-sm-4 col-md-offset-4">
       <span class="custom-avatar"><%= gravatar_for @user, size:150%></span>
    </div>
</div>    

<% if logged_in? && @user== current_user%>
    <div class="text-center mt-4">
        <%=link_to "edit your profile", edit_user_path(@user), class: "btn btn-outlin"%>
    </div>
<% end %>

<h6 align="center"> <%= @user.username%>'s Articles<h6>
<div class="pagination-wrapper">
    <%= will_paginate @user_articles%>
</div>
